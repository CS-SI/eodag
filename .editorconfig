# https://editorconfig.org

root=true

[*]
charset=utf-8
end_of_line=lf
indent_style=space
indent_size=4
trim_trailing_whitespace=true

[*.py]
insert_final_newline=true
max_line_length=88

[docs/*.rst]
max_line_length=80

[{*.geojson,*.json}]
indent_style=space
indent_size=2

[{Makefile.*,Makefile,makefile,GNUmakefile,*.mk}]
indent_style=tab
tab_width=4

[{*.yaml,*.yml}]
indent_style=space
indent_size=2
